<view style='height:{{windowHeight-54}}px;width:100%;overflow:scroll;'>
  <view class='pay_sucess'>
    <image src='http://img3.cloudokids.cn/h5img/scene/cld_collage_sure.png'></image>
    <view class='pay_ok'>您已成功支付</view>
    <view class='pay_look' bindtap="lookOrder">查看订单 ></view>
  </view>
  <!-- 拼团中开始 -->
  <view class='collage_group' wx:if="{{getGroupIsRookieGroupFlag}}">
    <view class='group_title'>
      <view wx:if="{{getGroupIsRookieGroup.unpaid>0 && getGroupIsRookieGroup.number == 0}}">
        <text class='deep'>拼团中</text>
        <view style='text-align:center'>还有
          <text class='deep_color'>{{getGroupIsRookieGroup.unpaid}}</text>人未支付</view>
      </view>
      <view wx:if="{{getGroupIsRookieGroup.status==0 && getGroupIsRookieGroup.number > 0}}">
        <text class='deep'>拼团中</text>
        <view style='text-align:center'>还差
          <text class='deep_color'>{{getGroupIsRookieGroup.number}}</text>人成团
          <text class='noColor'>时间仅剩</text>
          <text class='deep_color'>{{endTime}}</text>
        </view>
      </view>
      <view wx:if="{{getGroupIsRookieGroup.status==2 || getGroupIsRookieGroup.status==3}}">
        <text class='deep'>拼团成功</text>
        <view style='text-align:center'>我们将尽快安排发货</view>
      </view>
    </view>
    <view class='group'>
      <view class='loader' wx:for="{{getGroupIsRookieGroup.members}}" wx:key="{{index}}" style='flex:{{getGroupIsRookieGroup.amount}}'>
        <image src='{{item.avatar}}'></image>
        <text class='superMan' wx:if="{{index==0}}">团长</text>
      </view>
    </view>
  </view>
  <!-- 拼团中结束 -->
  <view class='tips' wx:if="{{getGroupIsRookieGroup.flag}}">
    <view>您已成功开团</view>
    <view>赶快邀请好友来参团吧</view>
  </view>
  <view class='site'>
    <view class='siteList' wx:for='{{siteList}}' wx:key="{{index}}">
      <view class='doc'>
        <view class='title'>
          <view class='index left'>
            <view class='top'>TOP</view>
            <view class='index' wx:if='{{index+1>9}}'>{{index+1}}</view>
            <view class='index' wx:else>0{{index+1}}</view>
          </view>
          <view class='activityDescription left' bindtap='goSitePageImg' data-id='{{item.id}}'>
            <view class="title">{{item.activityTitle}}</view>
            <view class="desc">{{item.activityDescription}}</view>
          </view>
        </view>
        <image src='{{item.img}}' lazy-load='true' class='siteImg' mode='widthFix' bindtap='goSitePageImg' data-id='{{item.id}}' data-group-type="{{item.groupBookingType}}"></image>
        <button class='getUp color3' bindtap='goSitePage' data-id='{{item.id}}' data-group-type="{{item.groupBookingType}}">
          <text>{{item.memberCount}}人参与拼场</text>
          <text>立即加入</text>
        </button>
      </view>
    </view>
  </view>
</view>
<view class='bottom_btn'>
  <view class='mp'>
    <button open-type='share'>分享给朋友
      <image src='http://img3.cloudokids.cn/h5img/scene/cld_collage_mp.png'></image>
    </button>
  </view>
  <view class='friend' bindtap="bindItemTap">分享到朋友圈
    <image src='http://img3.cloudokids.cn/h5img/scene/cld_collage_quan.png'></image>
  </view>
</view>
<view class='canvasBg' hidden='{{spuCanvas}}' style='height:{{windowHeight}};width:100%;overflow:hidden;'></view>
<view class='spuCanvas' hidden='{{spuCanvas}}'>
  <canvas class='spuCanvasImg' canvas-id='spuCanvas' disable-scroll='true' bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd"></canvas>
  <button class='btn1' bindtap='saveSpuCanvasImg'>保存到相册</button>
  <button class='btn2' bindtap='cancelSpuCanvasImg'></button>
</view>
<view class='tooltipBg' wx:if="{{flag}}"></view>
<view class='tooltip' wx:if="{{flag}}">
  <view class='title'>感谢您参与拼团，优惠券已到账，</view>
  <view class='etitle'>请在“我的卡券”中查看使用</view>
  <navigator class='same' hover-class='none' url='../newStyle/newStyle?specialId=2500&specialTopicId=2577&pageCome=1'>
    <image src='https://img3.cloudokids.cn/h5img/icon/collagePaysucess1.png'></image>
  </navigator>
  <navigator class='same' hover-class='none' url='../newStyle/newStyle?specialId=2488&specialTopicId=2565&pageCome=1'>
    <image src='https://img3.cloudokids.cn/h5img/icon/collagePaysucess2.png' class='same'></image>
  </navigator>
  <image src='https://img1.cloudokids.cn/buyers/scene/groupBooking3.png' class='cloudoImg' bindtap='closeImg'></image>
</view>