<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'on':''}}" data-current="0" data-status="1" bindtap="swichNav">待付款</view>
  <view class="swiper-tab-item {{currentTab==1?'on':''}}" data-current="1" data-status="2" bindtap="swichNav">拼团中</view>
  <view class="swiper-tab-item {{currentTab==2?'on':''}}" data-current="2" data-status="3" bindtap="swichNav">已成团</view>
  <view class="swiper-tab-item {{currentTab==3?'on':''}}" data-current="3" data-status="4" bindtap="swichNav">已失败</view>
</view>
<view wx:if="{{currentTab==0}}">
  <scroll-view bindscrolltolower="bindDownLoad" lower-threshold="1" scroll-top="{{scrollTop}}" scroll-y="true" style="height:{{winHeight - 80}}px">
    <view class="orderList" wx:for="{{order}}" wx:key="" bindtap="orderInfo" data-index="{{item.orderSn}}">
      <view class="orderNumber">
        <view>
          <text>拼单：{{item.groupSn}}</text>
          <text>¥{{item.payMoney}}  {{item.createTimeStr}}</text>
        </view>
        <view>
          <text>{{item.returnStatus}}</text>
        </view>
      </view>
      <view class="orderInfo">
        <text>还差<text class="mark">{{item.needMemberCount}}</text>人成团  时间仅剩<text class="mark">{{clockDown[index]}}</text></text>
        <text class="shareBtn" catchtap="goActivity" data-activity-id="{{item.activityId}}" data-groupBookingType='{{item.groupBookingType}}'>去分享</text>
      </view>
    </view>
  </scroll-view>
</view>
