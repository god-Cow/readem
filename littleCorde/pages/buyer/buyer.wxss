}
.matchPic {
  width: 690rpx;
  margin: 0 auto;
}
.matchBuyer {
  height: 342rpx;
  width: 100%;
  position: relative;
  overflow: visible;
}
.matchPic image {
  display: block;
  width: 665rpx;
  margin: 0 auto;
}
.matchBuyer image {
  display: block;
  width: 130rpx;
  height: 130rpx;
  position: absolute;
  left: 50%;
