.group{
  width: 100%;
}
.group > view{
  text-align: center;
  letter-spacing: 3rpx;
}
.group > view:nth-of-type(1){
  font-size: 30rpx;
  line-height: 40rpx;
  margin-top: 60rpx;
  height: 40rpx;
}
.group > view:nth-of-type(1) image{
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  padding-right: 10rpx;
}
.group > view:nth-of-type(2){
  font-size: 22rpx;
  line-height: 36rpx;
  color: #666666;
  margin-top: 25rpx;
}
.group button{
  width: 300rpx;
  height: 80rpx;
  background: #010101;
  color: #fff;
  line-height: 80rpx;
  font-size: 30rpx;
  margin: 60rpx auto 30rpx;
}
.line{
  width: 100%;
  height: 20rpx;
  background: #f3f3f3;
}
.shopInfo{
  width: 100%;
}
.shopInfo .list{
  width: 92%;
  border-bottom: 1px solid #ccc;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  margin: 0 auto;
}
.shopInfo .list .left{
  flex:1;
  font-size: 26rpx;
}
.shopInfo .list .right{
  flex:3;
  font-size: 20rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}