<view class="address" wx:if="{{addressFlag}}">
  <text>您还没有添加地址</text>
</view>
<view class="addressList" wx:else>
  <view class="list {{item.isTouchMove? 'newActive':''}}" wx:for="{{address}}" wx:key="" data-index="{{item.id}}" bindtouchstart="touchstart" bindtouchmove="touchmove">
    <view class="content"  data-index="{{item.id}}" bindtap="newAddress">
      <view class="addressInfo">
        <view class="name">{{item.name}}({{item.phone}})</view>
        <view class="postcode">{{item.address}}</view>
        <view class="info">{{item.provinceVo}},{{item.cityVo}},{{item.countyVo}}</view>
      </view>
      <view class="{{item.isDefault?'defaultAddress':'newDefaultAddress'}}">
        <text>默认</text>
      </view>
      <view class="right">
        <image src="https://img1.cloudokids.cn/buyers/weiXinMiniApps/littleCodeGoNext1.png" wx:if="{{selectSign == ''}}"></image>
        <image src="https://img1.cloudokids.cn/buyers/weiXinMiniApps/checkMark.png" style="display:{{item.addressSelectLogo}}" wx:else></image>
      </view>
    </view>
    <view class="operate">
      <text class="redact" catchtap="redact" data-index="{{item.id}}">编辑</text>
      <text class="del" catchtap="del" data-index="{{item.id}}">删除</text>
    </view>
  </view>
</view>
<view class="addAddress">
  <navigator url="../../pages/addAddress/addAddress">
    <text>手动添加</text>
  </navigator>
  <button bindtap='addWeiXinAddress'>微信添加</button>
</view>
<view class="toast_content_box" wx:if="{{isShowToast}}">  
  <view class="toast_content">  
    <view class="toast_content_text">  
      {{toastText}}  
    </view>  
  </view>  
</view>