.classify {
  display: flex;
  width: 100%;
  background: #fff;
  height: 96rpx;
  border-bottom: 1px solid #f7f7f7;
  box-sizing: border-box;
}
.classifyList {
  flex: 2;
  text-align: center;
  font-size: 28rpx;
  line-height: 112rpx;
  color: #444;
  font-weight: bolder;
}
.index-tabs {
  width: 600rpx;
  margin: 0 auto;
  overflow: hidden;
}
.index-tabs .tab-list {
  align-items: center;
  height: 92rpx;
  font-size: 32rpx;
  line-height: 92rpx;
  color: #A0A0A0;
  position: relative;
  width: 50%;
  float: left;
  text-align: center;
}
.active{
  color:#333!important;
  font-weight: bold;
}
.color1{
  background: linear-gradient(to right, #ff488e, #ffbf84);
  width: 300rpx;
  height: 10rpx;
  background-size: 100% 100%;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -150rpx;
}
.color2{
  background: #888;
  width: 300rpx;
  height: 10rpx;
  background-size: 100% 100%;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -150rpx;
}

.classifyFixed {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}
.sort {
  width: 100%;
  overflow: hidden;
  border-bottom: 1px solid #f7f7f7;
  border-right: 1px solid #f7f7f7;
  padding-bottom: 100rpx;
}
.sortList {
  height: 180rpx;
  line-height: 90rpx;
  width: 248rpx;
  font-size: 24rpx;
  color: #444;
  float: left;
  text-align: center;
  border: 1px solid #f7f7f7;
  border-top: 0;
  border-right: 0;
  background: #fff;
}
.sortList image {
  display: block;
  width: 64rpx;
  height: 64rpx;
  margin: 25rpx auto 0;
}
.hotBrand {
  width: 100%;
  height: 200rpx;
  white-space: nowrap;
  margin-bottom: 40rpx;
}
.hotBrandList {
  width: 280rpx;
  height: 200rpx;
  display: inline-block;
  margin-left: 20rpx;
}
.hotBrandList:nth-child(1) {
  margin-left: 30rpx;
}
.hotBrandList image {
  width: 280rpx;
  height: 152rpx;
  display: block;
}
.hotBrandList view {
  text-align: center;
  font-size: 24rpx;
  color: #444;
  margin: 20rpx auto 0;
  width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.hotBrandTitle {
  text-align: center;
  font-size: 24rpx;
  color: #444;
  width: 100%;
  margin: 0rpx auto 40rpx;
  padding-top: 40rpx;
}
.item_left {
  display: block;
  width: 100%;
}
.topHeader {
  height: 88rpx;
  width: 100%;
  display: block;
  background: #f7f7f7;
  line-height: 88rpx;
  font-size: 36rpx;
  color: #ccc;
  padding-left: 15px;
}
.brandName {
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1px solid #eaeaea;
  margin: 0 20px 0 15px;
}
.item_left .brandName:nth-of-type(1) {
  border-top: 0;
}
.classname {
  overflow: hidden;
}
.nextData {
  display: block;
  font-size: 24rpx;
  color: #010101;
  font-family: "Avenir Next";
  line-height: 80rpx;
}
.isTopBrand scroll-view {
  width: 100%;
  white-space: nowrap;
}
.isTopBrand .isTopBrandName {
  display: inline-block;
  height: 160rpx;
  width: 160rpx;
  margin: 0 10rpx;
}
.isTopBrand .isTopBrandName navigator image {
  height: 160rpx;
  width: 160rpx;
}
