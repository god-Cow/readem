@import "./style/layout.wxss";
.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}
page {
  background-color: #fff;
  color: #010101;
}
button.form_button{background-color:transparent;padding:0;margin:0;display:inline;position:static;border:0;padding-left:0;padding-right:0;border-radius:0;font-size:0rpx;color:transparent;}
button.form_button::after{content:'';width:0;height:0;-webkit-transform:scale(1);transform:scale(1);display:none;background-color:transparent;}
.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;
  top:0;
  left:0;  
  z-index: 99999;  
}  
.toast_content {  
  width: 50%;  
  padding: 20rpx;  
  background: rgba(0, 0, 0, 0.5);  
  border-radius: 20rpx;  
}  
.toast_content_text {  
  height: 100%;  
  padding: 0;
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
}
button{
  border: 0;
  border-radius: 0;
  padding-left: 0;
  padding-right: 0;
}
button::after{
  content: none
}
.loginBg{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index:100000;
}
.loginTips{
  width: 650rpx;
  height: 300rpx;
  border-radius: 20rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 100001;
  background: #fff;
  margin-left: -325rpx;
  margin-top: -150rpx;
}
.loginText{
  font-size: 30rpx;
  width: 90%;
  margin: 45rpx auto;
  height: 100rpx;
  line-height: 50rpx;
  text-align: justify;
}
.loginBtn{
  font-size: 30rpx;
  line-height: 100rpx;
  color: red;
  background: #fff;
  border-top: 1px solid #ccc;
}
.page-top-line{position: fixed;z-index: 999;width: 100%; height: 0; top: 0;border-top:1rpx solid #c6c6c6;}
.canvasBg {
  position: fixed;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.6);
}
.spuCanvas {
  position: fixed;
  width: 280px;
  height: 480px;
  left: 50%;
  top: 50%;
  z-index: 111;
  margin-top: -250px;
  margin-left: -140px;
}
.spuCanvasImg {
  width: 280px;
  height: 400px;
}
.spuCanvas view {
  height: 80px;
  width: 280px;
  overflow: hidden;
}
.spuCanvas button {
  border: 0;
  border-radius: 0;
  display: block;
}
.spuCanvas button::after {
  content: none;
}
.spuCanvas .btn1 {
  background: linear-gradient(to right, #ff488e, #ffbf84);
  color: #fff;
  width: 360rpx;
  height: 96rpx;
  border-radius: 48rpx;
  box-shadow: 0 8rpx -12rpx rgba(255, 54, 54, 0.3) outset;
  font-size: 28rpx;
  line-height: 96rpx;
  margin-top: 20rpx;
  z-index: 122;
  position: absolute;
  left: 50%;
  margin-left: -180rpx;
}
.spuCanvas .btn2 {
  background: url("https://cloudoh5img.oss-cn-hangzhou.aliyuncs.com/h5img/icon/delDraw.png") no-repeat;
  background-size: 40rpx 40rpx;
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx auto 0;
  position: absolute;
  left: 50%;
  margin-left: -22rpx;
  z-index: 122;
  bottom: -20rpx;
}