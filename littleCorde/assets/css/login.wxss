.loginBg{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index:100000;
  display: none;
}
.loginBg.notLogin{
  display: block;
}
.loginTips{
  width: 650rpx;
  height: 300rpx;
  border-radius: 20rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 100001;
  background: #fff;
  margin-left: -325rpx;
  margin-top: -150rpx;
}
.loginTips .loginText{
  font-size: 30rpx;
  width: 90%;
  margin: 45rpx auto;
  height: 100rpx;
  line-height: 50rpx;
  text-align: justify;
}
.loginTips .loginBtn{
  font-size: 30rpx;
  line-height: 100rpx;
  color: red;
  background: #fff;
  border-top: 1px solid #ccc;
}