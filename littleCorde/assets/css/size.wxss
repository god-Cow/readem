/*== 尺码 ==*/
.newBody {
  width: 100%;
  background: #000;
  opacity: 0.6;
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  z-index: 50;
}

.headImg {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  left: 40rpx;
  top: -40rpx;
  z-index: 150;
  background: #fff;
  box-shadow: 2px 2px 3px #aaa;
}

.headImg image {
  width: 90%;
  height: 90%;
  display: block;
  margin: 5%;
}

.moreSize {
  position: fixed;
  overflow:visible !important;
  left: 0;
  bottom: 0;
  z-index: 111;
  background: #f9f9f9;
  min-height:700rpx;
  width: 100%;
  border-top: 1px solid #d5d4d8;
}
.moreSize .cartBtn{
  position: fixed;
  width: 100%;
  bottom: 0;

}

.moreSize .head {
  height: 180rpx;
  border-bottom: 1px solid #ccc;
}


.moreSize .head .goodsCost {
  float: left;
  margin-left: 280rpx;
  height: 180rpx;
  width: 370rpx;
}

.moreSize .head .goodsCost .goodsCostText {
  font-size: 30rpx;
  line-height: 80rpx;
  display: block;
}

.moreSize .head .goodsCost .moreSizeCountry {
  width: 100%;
  overflow: hidden;
  height: 40rpx;
}

.moreSize .head .goodsCost .moreSizeCountry image {
  display: block;
  float: left;
  width: 36rpx;
  height: 27rpx;
  margin-top: 8rpx;
}

.moreSize .head .goodsCost .moreSizeCountry text {
  font-size: 22rpx;
  color: #a0a0a0;
  display: block;
  float: left;
  line-height: 40rpx;
  margin-left: 10rpx;
}

.moreSize .head .iconDel {
  background: url("https://img3.cloudokids.cn/h5img/scene/icon-del.png") no-repeat;
  float: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
  background-size: 50rpx 50rpx;
  width: 50rpx;
  height: 50rpx;
}

.moreSize .gray {
  max-height: 660rpx;
  width: 100%;
  overflow: scroll;
  padding-bottom: 100rpx;
}

.moreSize .gray .grayTitle {
  font-size: 24rpx;
  color: #a0a0a0;
  line-height: 80rpx;
  margin-left: 40rpx;
}

.moreSize .gray .grayList view {
  float: left;
  height: 50rpx;
  width: 196.6rpx;
  background: #ebebeb;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.grayChecked {
  background: #010101 !important;
  color: #fff;
}
.blackActive{
  color: #fff!important;
  background: #000!important;
}
.stockCheck {
  background: #ebebeb;
  color: #b6b6b6;
}
.listNoData{
  text-align: center; line-height: 40rpx; font-size: 24rpx; color: #6c6c6c; margin-top: 20rpx;
}
